<!DOCTYPE html>
<html lang="en" dir="ltr">
    <head>
        <meta charset="utf-8">
        <link rel="stylesheet" href="/css/app.css">  
        <title></title>
        <link rel="stylesheet" href="/normalize.css">
        <link rel="stylesheet" href="/skeleton.css">
    </head>
    <body>
      
        <div class="container">
            
                <% let total = 0 %>
                
                <% for (let i = 0; i < budget.length; i++) { %>
                    <% total += parseInt(budget[i].amount, 10) %>
                  <% } %>
                  
                 <% if (total < 0) { %>
                    <h1 style='color: red;'> $<%= total %> </h1>
                <% } else { %>
                    <h1 style='color: green;'> $<%= total %> </h1>
                <% } %>
               
                  









            <h1>Budgtr ALL</h1>
            <a href="/budget/new"><button>Add New Item</button></a>
            <table>
                    <% for(let i = 0; i < budget.length; i++){ %>
                    <tr>
                        <td><%= budget[i].date %></td>
                        <td><a href="/index/<%=i%>"><%= budget[i].name %></a></td>
                        <td><%= budget[i].amount %></td>
                    </tr>
                    <% } %>
                </table>
        </div>


    </body>
</html>